<section class="bikes">
  <div class="container"> 
    <div class="col-lg-12">
      
      <!-- search control -->
      <%= form_tag bikes_path, :method => 'get' do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class:'form-control'%>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      <% end %>

      <br />

      <!-- bike items -->
      <div class="col-md-12">
         <div id="bike">
             <% for bike in @bikes %>
                 <div class="col-sm-3">
                     <div class="bike-item" id=<%= "bike_#{bike.id}" %>>
                        <a href=<%= bike_url(bike) %> class="bike-link" data-toggle="modal">
                           <div class="caption">
                              <div class="caption-content">
                                  <i class="fa fa-search-plus fa-3x"></i>
                              </div>
                          </div>
                          <%= image_tag(bike.avatars[0].url , class: "img-responsive") %>
                        </a> 
                        <div class="bike-inform">
                          <div id="name">
                              <b><%= bike.name %></b>   
                          </div>        
                          <div id="brand">
                              <%= bike.brand %>
                          </div>
                          <div id="price">
                              <%= bike.price %>
                          </div>
                          <div id="market_time">
                              <%= bike.market_time %>
                          </div>
                          <div class="function-buttons">
                              <%= favorite_bike_tag bike %>
                          </div>
                        </div>
                    </div>
                </div> 
             <% end %> 
         </div>
      </div>
      <div class="text-center">
        <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
      </div>
      <!-- side tool bar -->
      <div class="tool-bar">
          <%= link_to '<i class="fa fa-plus" aria-hidden="true">&nbsp create new</i>'.html_safe, new_bike_path , class: "btn btn-default" %>              
      </div>
  
    </div>
  </div>
</section>
