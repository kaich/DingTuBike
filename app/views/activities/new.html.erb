<%= form_for @activity do |f| %>
    <div class="form-group">
        <%= f.label :name, 'Name:' %>
        <%= f.text_field :name, class:"form-control" %>
    </div>     

    <div class="form-groupe">
        <%= f.file_field :cover %>  
    </div>

    <div class="form-group">
        <%= f.label :start_time, 'start time' %>
        <%= f.label :end_time, 'end time' %>
    </div>

    <div class="form-group">
        <%= f.label :market_time, 'start_time' %>
        <div class="input-group datetimepicker">
        <%= f.text_field :start_time,class:"form-control"%>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :end_time, 'start_time' %>
        <div class="input-group datetimepicker">
            <%= f.text_field :end_time,class:"form-control"%>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>k
    
    <div class="form-group">
       <%= f.label :rule, 'Rule' %> 
       <%= f.text_area :rule, class:"form-control" ,"data-provide" => "markdown" , "rows" => "5" %>
    </div>

    <div class="form-group">
       <%= f.label :information, 'Information' %> 
       <%= f.text_area :information, class:"form-control" ,"data-provide" => "markdown" , "rows" => "10" %>
    </div>

    <%= f.submit 'Submit', :disable_with => 'Submiting...' ,class:"btn btn-primary" %>

<% end %>
